
% cop: reverser hodet i setninger der "være" er rot, med SPRED, men uten PSUBJ. Predikativet er ny rot. 
rule rev_head_copula_in_subclause {
	pattern {
    H [ lemma="være" ];
    e: H -[SPRED]-> D;
  }
  without {
    H -[PSUBJ]-> *;
  }
  commands {
    del_edge e;
    shift H ==> D;
    add_edge f: D -> H;
    f.label = cop;
    f.rev=y;
  }
}
